{% if paragraph.field_p_full_width_hero.value %}
  {% set hero_media_full = true %}
{% endif %}

{% if paragraph.field_p_hero_media_video.value %}
  {% set hero_media_video = content.field_p_hero_media_video %}
{% endif %}
{% set video_mid = '/media/' ~ hero_media_video|field_target_entity.mid.value %}

{% if paragraph.field_p_hero_media_centered.value %}
  {% set hero_media_centered = true %}
{% endif %}

{% if paragraph.field_p_hero_media_title.value %}
  {#
    Check the hero media parent. If it's a building block, set the title to h2, if not leave it at h1
  #}
  {% set hero_parent = paragraph._referringItem.parent.entity.parent_field_name.value %}
  {% if hero_parent == 'field_building_blocks' %}
    {% set hero_media_title_element = 'h2' %}
  {% endif %}
  {% set hero_media_title = paragraph.field_p_hero_media_title.value %}
{% endif %}

{% if paragraph.field_p_hero_media_intro.value %}
  {% set hero_media_intro = content.field_p_hero_media_intro %}
{% endif %}

{% if paragraph.field_p_hero_media_cta.value %}
  {% set hero_media_cta_link  = content.field_p_hero_media_cta.0['#url'] %}
  {% set hero_media_cta_text = content.field_p_hero_media_cta.0['#title'] %}
{% endif %}

{% if paragraph.field_p_hero_media_image.value %}
  {% set hero_media_image = content.field_p_hero_media_image %}
{% endif %}

{% include "@building-blocks/hero-media/hero-media.twig" %}
