          <div class="sg-colors__sample sg-swatch bg-tertiary{% if item.name|slice(13,5)|length > 0 %} bg-tertiary--{{ item.name|slice(13,5) }}{% endif %}"></div>
          <div class="sg-info">
            <span>{{item.value}}</span>
            <code>{{item.name}}</code>
            {% if item.comment %}<div class="comment">{{ item.comment }}</div>{% endif %}
          </div>
        </li>
      {% endif %}
    {% endfor %}
  </ul>

