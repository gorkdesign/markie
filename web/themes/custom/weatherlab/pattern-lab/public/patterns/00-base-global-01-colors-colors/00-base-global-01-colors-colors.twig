<div class="layout-contained padding-horizontal">
  <h2>Primary Colours</h2>
  <ul class="sg-colors">
    {% for item in items %}
      {% if (('primary' in item.name)) %}
        <li>
          <div class="sg-colors__sample sg-swatch bg-primary{% if item.name|slice(12,5)|length > 0 %} bg-primary--{{ item.name|slice(12,5) }}{% endif %}"></div>
          <div class="sg-info">
            <span>{{item.value}}</span>
            <code>{{item.name}}</code>
          </div>
        </li>
      {% endif %}
    {% endfor %}
  </ul>

  <h2>Secondary Colours</h2>
  <ul class="sg-colors">
    {% for item in items %}
      {% if (('secondary' in item.name)) %}
        <li>
          <div class="sg-colors__sample sg-swatch bg-secondary{% if item.name|slice(12,5)|length > 0 %} bg-secondary--{{ item.name|slice(14,5) }}{% endif %}"></div>
          <div class="sg-info">
            <span>{{item.value}}</span>
            <code>{{item.name}}</code>
            {% if item.comment %}<div class="comment">{{ item.comment }}</div>{% endif %}
          </div>
        </li>
      {% endif %}
    {% endfor %}
  </ul>

  <h2>Tertiary Colours</h2>
  <ul class="sg-colors">
    {% for item in items %}
      {% if (('tertiary' in item.name)) %}
